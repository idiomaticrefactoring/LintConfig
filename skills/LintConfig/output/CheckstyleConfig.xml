<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<config>
    <!-- Configuration for coding rules based on package declaration requirements -->

    <!-- Rule 1: Package declarations must not span multiple lines (NoLineWrap) -->
    <!-- This rule enforces that package declarations cannot be line-wrapped. -->
    <!-- It directly addresses the "Must / [PackageDeclaration] / Not LineWrapped" requirement. -->
    <module name="NoLineWrap">
        <property name="tokens" value="PACKAGE_DEF"/>
    </module>

    <!-- Rule 2: Package declarations are exempt from 100-character column limit (LineLength) -->
    <!-- This rule checks line length while exempting package declarations from the limit. -->
    <!-- The default ignorePattern already includes package statements: "^(package|import) .*" -->
    <!-- It directly addresses the "Optional / [PackageDeclaration] / Exempt from / [ColumnLimit(100)]" requirement. -->
    <module name="LineLength">
        <property name="max" value="100"/>
        <property name="ignorePattern" value="^(package|import) .*"/>
    </module>

</config>
